<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="debug" />
		<param name="encoding" value="UTF-8" />

		<!-- 设置监视器输出方式 -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{mm:ss} %-5p (%F:%L) [%M()] %m%n" />
		</layout>
		<!--限制输出级别 -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>

	<!--
		priority已经由level代替 
		category已经由logger代替。 
	-->
	<logger name="com.feilong">
		<level value="debug" />
	</logger>
	<category name="org.apache.velocity">
		<priority value="info" />
	</category>
	<logger name="com.feilong.template.VelocityEngineBuilder">
		<level value="info" />
	</logger>

	<category name="org.springframework">
		<priority value="info" />
	</category>
	<category name="com.feilong.lib.beanutils">
		<priority value="info" />
	</category>
	<category name="org.apache">
		<priority value="info" />
	</category>
	<category name="com.feilong.core.lang.ThreadUtil">
		<priority value="info" />
	</category>

	<!-- 设置接收所有输出的通道 -->
	<root>
		<level value="debug" />
		<appender-ref ref="stdout" />
	</root>
</log4j:configuration>